@model S2IT.LocadoraGames.Application.ViewModels.JogoViewModel

@{
    ViewData["Title"] = "Emprestar";
}

<h2>@ViewData["Title"]</h2>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.min.css" rel="stylesheet">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Emprestar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JogoId" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" readonly />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEmprestimo" class="control-label"></label>
                <input type="text" asp-for="DataEmprestimo" class="form-control" autocomplete="off" value=@DateTime.Now.ToShortDateString() required
                       title="Campo obrigatório para realizar o emprestimo" />
                <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataDevolucao" class="control-label"></label>
                <input type="text" asp-for="DataDevolucao" class="form-control" autocomplete="off" required
                       title="Campo obrigatório para realizar o emprestimo" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amigo" class="control-label"></label>
                <select asp-for="AmigoId" class="form-control" asp-items="ViewBag.AmigoId"></select>
                <span asp-validation-for="AmigoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Realizar Emprestimo" id="btSubmit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">
                    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.pt-BR.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.pt.min.js"></script>
    <script>
        Validations();

    </script>

}
